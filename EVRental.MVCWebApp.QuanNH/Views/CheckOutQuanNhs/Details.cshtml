@model EVRental.MVCWebApp.QuanNH.Models.CheckOutQuanNhViewModel

@{
	ViewData["Title"] = "Check-out Details";
}

<h1 class="h3 mb-3">Check-out Details</h1>

<dl class="row">
	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.CheckOutQuanNhid)</dt>
	<dd class="col-sm-9">@Model.CheckOutQuanNhid</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.CheckOutTime)</dt>
	<dd class="col-sm-9">@(Model.CheckOutTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReturnDate)</dt>
	<dd class="col-sm-9">@(Model.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.TotalCost)</dt>
	<dd class="col-sm-9">@(Model.TotalCost?.ToString("N0") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.ExtraCost)</dt>
	<dd class="col-sm-9">@(Model.ExtraCost?.ToString("N0") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.LateFee)</dt>
	<dd class="col-sm-9">@(Model.LateFee?.ToString("N0") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsPaid)</dt>
	<dd class="col-sm-9">@(Model.IsPaid ? "Yes" : "No")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsDamageReported)</dt>
	<dd class="col-sm-9">@(Model.IsDamageReported ? "Yes" : "No")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
	<dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.PaymentMethod) ? "-" : Model.PaymentMethod)</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.Notes)</dt>
	<dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Notes) ? "-" : Model.Notes)</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustomerFeedback)</dt>
	<dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.CustomerFeedback) ? "-" : Model.CustomerFeedback)</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.StaffSignature)</dt>
	<dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.StaffSignature) ? "-" : Model.StaffSignature)</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.CustomerSignature)</dt>
	<dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.CustomerSignature) ? "-" : Model.CustomerSignature)</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReturnConditionId)</dt>
	<dd class="col-sm-9">@(Model.ReturnConditionId?.ToString() ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReturnConditionName)</dt>
	<dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.ReturnConditionName) ? "-" : Model.ReturnConditionName)</dd>
</dl>

<div class="mt-4">
	<a asp-action="Edit" asp-route-id="@Model.CheckOutQuanNhid" class="btn btn-primary me-2">Edit</a>
	<a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
