@model EVRental.MVCWebApp.QuanNH.Models.CheckOutQuanNhViewModel

@{
	ViewData["Title"] = "Check-out Details";
}

<div class="card shadow-sm border-0">
	<div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
		<div>
			<h2 class="h5 mb-1">Check-out #@Model.CheckOutQuanNhid</h2>
			<div class="small text-white-50">Tình trạng trả xe: @(string.IsNullOrWhiteSpace(Model.ReturnConditionName) ? "Chưa xác định" : Model.ReturnConditionName)</div>
		</div>
		<div class="d-flex gap-2">
			<span class="badge rounded-pill @(Model.IsPaid ? "bg-success" : "bg-warning text-dark")">@(Model.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</span>
			<span class="badge rounded-pill @(Model.IsDamageReported ? "bg-danger" : "bg-secondary")">@(Model.IsDamageReported ? "Có hư hỏng" : "Không hư hỏng")</span>
		</div>
	</div>
	<div class="card-body">
		<div class="row row-cols-1 row-cols-md-2 g-4">
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.CheckOutTime)</span>
				<div class="fw-semibold">@(Model.CheckOutTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.ReturnDate)</span>
				<div class="fw-semibold">@(Model.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.TotalCost)</span>
				<div class="fw-semibold">@(Model.TotalCost?.ToString("N0") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.ExtraCost)</span>
				<div class="fw-semibold">@(Model.ExtraCost?.ToString("N0") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.LateFee)</span>
				<div class="fw-semibold">@(Model.LateFee?.ToString("N0") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.PaymentMethod)</span>
				<div class="fw-semibold">@(string.IsNullOrWhiteSpace(Model.PaymentMethod) ? "-" : Model.PaymentMethod)</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.Notes)</span>
				<div>@(string.IsNullOrWhiteSpace(Model.Notes) ? "-" : Model.Notes)</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.CustomerFeedback)</span>
				<div>@(string.IsNullOrWhiteSpace(Model.CustomerFeedback) ? "-" : Model.CustomerFeedback)</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.StaffSignature)</span>
				<div class="fw-semibold">@(string.IsNullOrWhiteSpace(Model.StaffSignature) ? "-" : Model.StaffSignature)</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.CustomerSignature)</span>
				<div class="fw-semibold">@(string.IsNullOrWhiteSpace(Model.CustomerSignature) ? "-" : Model.CustomerSignature)</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.ReturnConditionId)</span>
				<div class="fw-semibold">@(Model.ReturnConditionId?.ToString() ?? "-")</div>
			</div>
		</div>

		<hr class="my-4" />

		<div class="d-flex flex-wrap gap-2">
			<a asp-action="Edit" asp-route-id="@Model.CheckOutQuanNhid" class="btn btn-primary">Chỉnh sửa</a>
			<a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
		</div>
	</div>
</div>
