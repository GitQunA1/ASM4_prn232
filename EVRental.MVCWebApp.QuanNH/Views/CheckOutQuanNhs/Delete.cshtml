@model EVRental.MVCWebApp.QuanNH.Models.CheckOutQuanNhViewModel

@{
	ViewData["Title"] = "Delete Check-out";
}

<h1 class="h3 mb-3 text-danger">Delete Check-out</h1>

<p>Are you sure you want to delete this record?</p>

<dl class="row">
	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.CheckOutQuanNhid)</dt>
	<dd class="col-sm-9">@Model.CheckOutQuanNhid</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.CheckOutTime)</dt>
	<dd class="col-sm-9">@(Model.CheckOutTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReturnDate)</dt>
	<dd class="col-sm-9">@(Model.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.TotalCost)</dt>
	<dd class="col-sm-9">@(Model.TotalCost?.ToString("N0") ?? "-")</dd>

	<dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsPaid)</dt>
	<dd class="col-sm-9">@(Model.IsPaid ? "Yes" : "No")</dd>
</dl>

<form asp-action="Delete" method="post" class="mt-3">
	<input type="hidden" asp-for="CheckOutQuanNhid" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>
