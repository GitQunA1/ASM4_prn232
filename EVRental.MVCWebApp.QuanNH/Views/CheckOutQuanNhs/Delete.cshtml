@model EVRental.MVCWebApp.QuanNH.Models.CheckOutQuanNhViewModel

@{
	ViewData["Title"] = "Delete Check-out";
}

<div class="card shadow-sm border-0">
	<div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
		<h1 class="h5 mb-0">Xoá check-out #@Model.CheckOutQuanNhid</h1>
		<span class="badge rounded-pill @(Model.IsPaid ? "bg-success" : "bg-warning text-dark")">@(Model.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</span>
	</div>
	<div class="card-body">
		<div class="alert alert-danger" role="alert">
			Bạn có chắc chắn muốn xoá bản ghi này? Thao tác không thể hoàn tác.
		</div>

		<div class="row row-cols-1 row-cols-md-2 g-4">
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.CheckOutTime)</span>
				<div class="fw-semibold">@(Model.CheckOutTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.ReturnDate)</span>
				<div class="fw-semibold">@(Model.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.TotalCost)</span>
				<div class="fw-semibold">@(Model.TotalCost?.ToString("N0") ?? "-")</div>
			</div>
			<div class="col">
				<span class="text-uppercase text-muted small">@Html.DisplayNameFor(model => model.ReturnConditionName)</span>
				<div class="fw-semibold">@(string.IsNullOrWhiteSpace(Model.ReturnConditionName) ? "-" : Model.ReturnConditionName)</div>
			</div>
		</div>

		<form asp-action="Delete" method="post" class="mt-4 d-flex flex-wrap gap-2">
			<input type="hidden" asp-for="CheckOutQuanNhid" />
			<button type="submit" class="btn btn-danger">Xoá bản ghi</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a>
		</form>
	</div>
</div>
